{% extends 'XideaUserBundle::main.html.twig' %}
{% block xidea_user_header_title %}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">{{ 'user_action.show.title'|trans({'%user_name%':object.name}) }}</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
{% endblock %}
{% block xidea_user_main %}
    <div class="row">
        <div class="col-lg-8">
            <div class="panel panel-default">
                <div class="panel-heading">
                    {{ 'user_action.show.details.title'|trans }}
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <table class="table table-bordered table-striped">
                        <tbody>
                          <tr>
                            <th scope="row">
                              <code>{{ 'user.name'|trans }}</code>
                            </th>
                            <td>{{ object.name }}</td>
                          </tr>
                          <tr>
                            <th scope="row">
                              <code>{{ 'user.created_at'|trans }}</code>
                            </th>
                            <td>{{ object.createdAt|date }}</td>
                          </tr>
                          <tr>
                            <th scope="row">
                              <code>{{ 'user.updated_at'|trans }}</code>
                            </th>
                            <td>{{ object.updatedAt|date }}</td>
                          </tr>
                        </tbody>
                      </table>
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
    </div>
{% endblock %}

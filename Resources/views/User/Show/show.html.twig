{% extends xidea_template('xidea_user', 'user_main') %}
{% block bundle_title %}
    <h1 class="page-header">{{ 'user_show.title'|trans({'%name%':model.name}) }}</h1>
{% endblock %}
{% block bundle_main %}
    <div class="row">
        <div class="col-lg-8">
            <div class="panel panel-default">
                <div class="panel-heading">
                    {{ 'user_show.details.title'|trans }}
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <table class="table table-bordered table-striped">
                        <tbody>
                          <tr>
                            <th scope="row">
                              <code>{{ 'user.name'|trans }}</code>
                            </th>
                            <td>{{ model.name }}</td>
                          </tr>
                          <tr>
                            <th scope="row">
                              <code>{{ 'user.created_at'|trans }}</code>
                            </th>
                            <td>{{ model.createdAt|date }}</td>
                          </tr>
                          <tr>
                            <th scope="row">
                              <code>{{ 'user.updated_at'|trans }}</code>
                            </th>
                            <td>{{ model.updatedAt|date }}</td>
                          </tr>
                        </tbody>
                      </table>
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
    </div>
{% endblock %}

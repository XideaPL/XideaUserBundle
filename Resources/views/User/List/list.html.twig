{% extends xidea_template('user_main') %}
{% block bundle_title %}
    <h1 class="page-header">{{ 'user_list.title'|trans }}</h1>
{% endblock %}
{% block bundle_main %}
    {% block user_main %}
        <div class="box box-default user-box">
            <div class="box-header">
                <h3 class="box-title">{{ 'user_list.title'|trans }}</h3>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
                {% block user_list %}
                    <div class="user-list table-responsive">
                        <table class="table table-striped user-table">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>{{ xidea_base_sorting(models.sorting, 'user.name'|trans, 'u.name') }}</th>
                                    <th>{{ xidea_base_sorting(models.sorting, 'user.created_at'|trans, 'u.createdAt') }}</th>
                                    <th>{{ xidea_base_sorting(models.sorting, 'user.updated_at'|trans, 'u.updatedAt') }}</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for model in models %}
                                    <tr>
                                        <td>{{ model.id }}</td>
                                        <td>{{ model.name }}</td>
                                        <td>{{ model.createdAt|date() }}</td>
                                        <td>{{ model.updatedAt|date() }}</td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>#</th>
                                    <th>{{ 'user.name'|trans }}</th>
                                    <th>{{ 'user.created_at'|trans }}</th>
                                    <th>{{ 'user.updated_at'|trans }}</th>
                                </tr>
                            </tfoot>
                        </table>
                        {{ xidea_base_pagination(models) }}
                    </div>
                    <!-- /.user-list -->
                {% endblock %}
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    {% endblock %}
{% endblock %}

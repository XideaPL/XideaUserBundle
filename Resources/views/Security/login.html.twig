{% extends xidea_template('xidea_user', 'login_main') %}
{% block bundle_title %}
    <h1 class="page-header">{{ 'user_login.title'|trans }}</h1>
{% endblock %}
{% block bundle_main %}
    {% block login_main %}
        {% block login_box %}
            <div class="box login-box">
                <div class="box-header">
                    <h3 class="box-title">{{ 'user_login.title'|trans }}</h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    {% block login_form %}
                        {{ include(xidea_template('xidea_user', 'login_form')) }}
                    {% endblock %}
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        {% endblock %}
    {% endblock %}
{% endblock %}